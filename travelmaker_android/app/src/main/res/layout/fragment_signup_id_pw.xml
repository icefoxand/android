<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tv_signup_id_pw_title"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="67dp"
        android:text="#1\n회원가입이에요.\n아이디와 패스워드를 입력해주세요."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_signup_id"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="269dp"
        app:helperText="아이디 생성규칙"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_signup_id"
            android:background="@drawable/background_location_edittext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="아이디를 입력해주세요."
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_signup_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/til_signup_id"
        app:layout_constraintTop_toTopOf="@+id/til_signup_id"
        app:layout_constraintBottom_toBottomOf="@+id/til_signup_id"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="8dp"
        android:text="중복확인"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_signup_pw"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:helperText="비밀번호 생성규칙"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_signup_id"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_signup_pw"
            android:background="@drawable/background_location_edittext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="비밀번호를 입력해주세요."
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_signup_id_pw_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="99dp"
        />

    <TextView
        android:id="@+id/tv_signup_id_pw_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="99dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>