<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup.ProfileSignupFragment">


    <TextView
        android:id="@+id/tv_page_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="프로필등록과 \n카테고리 설정을 해주세요"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/ic_empty_profile_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_page_message" />


    <TextView
        android:id="@+id/tv_my_travel_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 여행관심사"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile"
        android:layout_marginTop="24dp"
        android:textSize="25dp"
        android:layout_marginStart="24dp"/>

    <com.google.android.material.chip.ChipGroup
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/chip_group_categories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_my_travel_like"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">
        <!--맛집, 힐링, 문화, 활동, 사진, 자연  -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_restaurant"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맛집"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_healing"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category 2"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_culture"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category 1"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_activity"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category 2"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_picture"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category 1"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_nature"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category 2"/>

    </com.google.android.material.chip.ChipGroup>


</androidx.constraintlayout.widget.ConstraintLayout>